{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "exclude": ["node_modules"],
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./config/**/*.ts",
        "./config/**/*.tsx",
        "./config/jest/testsSetup.ts",
    ],
}
