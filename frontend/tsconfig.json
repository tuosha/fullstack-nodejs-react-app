{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noEmit": false,
    "noEmitOnError": false,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "exclude": [
    "../node_modules"
  ]
}